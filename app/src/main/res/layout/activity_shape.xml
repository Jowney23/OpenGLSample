<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context="com.jowney.openglsample.ShapeActivity">

    <Button
            android:text="Sample 01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sample_01"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            android:textAllCaps="false"
            android:onClick="goSample01"
            app:layout_constraintRight_toRightOf="parent"/>

    <Button
            android:text="Sample 02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sample_02"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_sample_01"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            android:textAllCaps="false"
            android:onClick="goSample02"
            app:layout_constraintRight_toRightOf="parent"/>

    <Button
            android:text="Sample 03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sample_03"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_sample_02"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            android:textAllCaps="false"
            android:onClick="goSample03"
            app:layout_constraintRight_toRightOf="parent"/>

    <Button
            android:text="Sample 04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sample_04"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_sample_03"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            android:textAllCaps="false"
            android:onClick="goSample04"
            app:layout_constraintRight_toRightOf="parent"/>

    <Button
            android:text="Sample 05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sample_05"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_sample_04"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            android:textAllCaps="false"
            android:onClick="goSample05"
            app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn_sample_06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Sample 06"
        android:onClick="goSample06"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sample_05" />

    <Button
        android:id="@+id/btn_sample_texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:onClick="goTextureSample"
        android:text="Sample texture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sample_06" />

    <Button
        android:id="@+id/btn_sample_07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Sample 07"
        android:onClick="goSample07"
        app:layout_constraintBottom_toTopOf="@+id/btn_sample_texture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sample_06" />


</android.support.constraint.ConstraintLayout>
